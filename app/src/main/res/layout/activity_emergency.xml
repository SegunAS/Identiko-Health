<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">

    <include layout="@layout/include_detail_header" android:id="@+id/header"/>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:padding="24dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:contentPadding="24dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    
                    <TextView android:text="Emergency Contact" android:textSize="18sp" android:textColor="#666" android:textStyle="bold"/>
                    
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="16dp">
                        <TextView android:text="Contact Info" android:layout_weight="1" android:textSize="16sp" android:textColor="#888"/>
                        <TextView 
                            android:id="@+id/tv_emergency_contact"
                            android:text="Loading..." 
                            android:layout_weight="1" 
                            android:gravity="end" 
                            android:textSize="18sp" 
                            android:textColor="#000" 
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:contentPadding="24dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    
                    <TextView android:text="HMO / Insurance" android:textSize="18sp" android:textColor="#666" android:textStyle="bold"/>
                    
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="16dp">
                        <TextView android:text="Provider" android:layout_weight="1" android:textSize="16sp" android:textColor="#888"/>
                        <TextView 
                            android:id="@+id/tv_insurance"
                            android:text="Loading..." 
                            android:layout_weight="1" 
                            android:gravity="end" 
                            android:textSize="18sp" 
                            android:textColor="#000" 
                            android:textStyle="bold"/>
                    </LinearLayout>
                    
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="12dp">
                        <TextView android:text="Status" android:layout_weight="1" android:textSize="16sp" android:textColor="#888"/>
                        <TextView 
                            android:text="â— Active" 
                            android:layout_weight="1" 
                            android:gravity="end" 
                            android:textSize="18sp" 
                            android:textColor="#10B981" 
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>