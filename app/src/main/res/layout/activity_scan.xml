    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="ID + H"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_logo_bg"
        app:layout_constraintTop_toTopOf="@id/img_logo_bg" />

    <TextView
        android:id="@+id/tv_scan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to Scan"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@id/view_pulse_outer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place LAG-ID card on NFC reader"
        android:textColor="#E0E0E0"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_scan_title" />

    <View
        android:id="@+id/view_pulse_outer"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:background="@drawable/bg_glass_rounded"
        android:backgroundTint="#15FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"/>
    
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/nfc"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/view_pulse_outer"
        app:layout_constraintEnd_toEndOf="@id/view_pulse_outer"
        app:layout_constraintStart_toStartOf="@id/view_pulse_outer"
        app:layout_constraintTop_toTopOf="@id/view_pulse_outer"/>

